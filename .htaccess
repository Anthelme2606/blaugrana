# Sert index.html par défaut
DirectoryIndex index.html

# Active la réécriture pour SPA
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /test/

  # Ne rien réécrire pour index.html
  RewriteRule ^index\.html$ - [L]

  # Si le fichier ou dossier existe, ne rien faire
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # Redirige tout le reste vers index.html
  RewriteRule . /test/index.html [L]
</IfModule>

# Cache pour les fichiers statiques (optionnel mais conseillé)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 0 seconds"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType image/* "access plus 1 month"
</IfModule>
